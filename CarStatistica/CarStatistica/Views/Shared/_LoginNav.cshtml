@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
    <ul class="navbar-nav ml-auto">

        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <span class="navbar-text">Witaj @UserManager.GetUserName(User)!</span>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Login" asp-action="Logout">Wyloguj</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Login" asp-action="Login">Zaloguj</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Register" asp-action="Register">Zarejestruj</a>
            </li>
        }
    </ul>
